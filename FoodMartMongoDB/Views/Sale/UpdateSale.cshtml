@model GetByIDSaleDto

@{
    ViewData["Title"] = "UpdateSelling";
    Layout = "~/Views/Default/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Satış Güncelleme Paneli</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <table class="table table-hover">
                        <td>
                            <input type="hidden" asp-for="Id"/>
                            <input type="hidden" asp-for="ProductId"/>
                            <label>Miktar</label>
                            <input type="text" asp-for="Count" class="form-control">
                            <br />                          
                            <label>Toplam Fiyat</label>
                            <input type="text" asp-for="Price" class="form-control">
                        </td>

                    </table>
                </div>
                <button class="btn btn-outline-primary" style="margin:10px">Satış Güncelleme</button>
            </form>
        </div>

    </div>
</div>





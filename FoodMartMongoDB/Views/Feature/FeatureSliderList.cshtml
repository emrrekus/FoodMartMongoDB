@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "FeatureSliderList";
    Layout = "~/Views/Default/AdminLayout.cshtml";
    int count = 0;

}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Öne Çıkan Slider Paneli</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Görsel</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Subtitle</td>
                                    <td>@item.Description</td>
                                    <td><img src="@item.ImageUrl" style="height:100px;" /></td>
                                    <td><a href="/Feature/DeleteFeatureSlider/@item.FeatureID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Feature/UpdateFeatureSlider/@item.FeatureID" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>

                </div>
            </form>
            <a href="/Feature/CreateFeatureSlider/" class="btn btn-outline-info" style="width:180px; height:40px; margin:10px">Yeni Slider Girişi</a>

        </div>

    </div>
</div>






@model List<ResultSellingWithProductDto>

@{
    ViewData["Title"] = "SellingList";
    Layout = "~/Views/Default/AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Satış Paneli</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ürün Adı</th>
                                <th scope="col">Ürün Miktarı</th>
                                <th scope="col">Görsel</th>
                                <th scope="col">Toplam Fiyat</th>                           
                                <th scope="col">Fiyat</th>                           
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@item.Count</td>
                                    <td><img src="@item.ImageUrl" style="height:100px;" /></td>
                                    <td>@item.TotalPrice</td>
                                    <td><a href="/Selling/DeleteSelling/@item.SellingID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Selling/UpdateSelling/@item.SellingID" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>

                </div>
            </form>
            <a href="/Selling/CreateSelling/" class="btn btn-outline-info" style="width:180px; height:40px; margin:10px">Yeni Satış Girişi</a>

        </div>

    </div>
</div>




